# =====================================================
# Slack Bot Event Organizer - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values

# ===============================
# Slack Configuration
# ===============================
# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App signing secret for webhook verification
SLACK_SIGNING_SECRET=your-signing-secret

# App-level token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# ===============================
# Google API Configuration
# ===============================
# Path to Google service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Google Workspace domain for calendar integration
GOOGLE_CALENDAR_DOMAIN=your-workspace-domain.com

# Google Places API key for venue search
GOOGLE_PLACES_API_KEY=your-places-api-key

# ===============================
# GCP Configuration
# ===============================
# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Firestore database ID (use "(default)" for default database)
FIRESTORE_DATABASE=(default)

# GCP region for Cloud Run deployment
GCP_REGION=us-central1

# ===============================
# External API Keys
# ===============================
# ぐるなびAPI key for Japanese restaurant search
GURUME_NAVI_API_KEY=your-gurume-api-key

# ===============================
# Application Configuration
# ===============================
# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Server configuration for Cloud Run
PORT=8080
HOST=0.0.0.0

# ===============================
# Agent Development Kit (ADK) Configuration
# ===============================
# ADK event bus configuration
ADK_EVENT_BUS_URL=redis://localhost:6379
ADK_AGENT_TIMEOUT=30

# ===============================
# Security Configuration
# ===============================
# Encryption key for OAuth tokens (generate with: openssl rand -base64 32)
OAUTH_ENCRYPTION_KEY=your-base64-encryption-key

# JWT secret for internal authentication
JWT_SECRET=your-jwt-secret

# ===============================
# Performance Configuration
# ===============================
# API rate limiting
GOOGLE_API_RATE_LIMIT=100
GURUME_API_RATE_LIMIT=50

# Request timeout in seconds
HTTP_TIMEOUT=10

# Firestore connection pool size
FIRESTORE_POOL_SIZE=10

# ===============================
# Feature Flags
# ===============================
# Enable/disable specific features
FEATURE_VENUE_BOOKING=true
FEATURE_CALENDAR_INTEGRATION=true
FEATURE_MEETING_ROOM_BOOKING=true
FEATURE_INTERMEDIATE_CONFIRMATIONS=true

# ===============================
# Testing Configuration
# ===============================
# Test Slack workspace configuration
TEST_SLACK_CHANNEL=C1234567890
TEST_ORGANIZER_USER=U1234567890
TEST_PARTICIPANT_USERS=U1111111111,U2222222222,U3333333333

# Mock external APIs in testing
MOCK_EXTERNAL_APIS=false

# ===============================
# Monitoring and Observability
# ===============================
# Enable structured logging
STRUCTURED_LOGGING=true

# Google Cloud Monitoring
ENABLE_GCP_MONITORING=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# ===============================
# Development Tools
# ===============================
# Enable debug mode (DO NOT use in production)
DEBUG=false

# Auto-reload on code changes (development only)
AUTO_RELOAD=false

# Database debugging
DB_DEBUG=false